{
    "vscode-nmake-tools.workspaceBuildDirectories": [],
    
    // Welcome settings
    "workbench.startupEditor": "readme",
    "workbench.tips.enabled": true,
    
    // Navigation extension is configured below - workspace demo is active!
    "navigation.groups": [
        {
            "name": "üöÄ Demo Navigation",
            "icon": "rocket",
            "expanded": true,
            "children": [
                {
                    "name": "üìÅ Project Files",
                    "type": "files",
                    "icon": "folder",
                    "files": [
                        "package.json",
                        "tsconfig.json",
                        "README.md",
                        "CHANGELOG.md",
                        "LICENSE"
                    ]
                },
                {
                    "name": "üíª Source Code",
                    "type": "group",
                    "icon": "code",
                    "children": [
                        {
                            "name": "üéØ Main Extension",
                            "type": "files",
                            "icon": "file-code",
                            "files": [
                                "src/extension.ts",
                                "src/navigationProvider.ts"
                            ]
                        },
                        {
                            "name": "‚öôÔ∏è Configuration & Utils",
                            "type": "files",
                            "icon": "gear",
                            "files": [
                                "src/config.ts",
                                "src/fileMatcher.ts"
                            ]
                        }
                    ]
                },
                {
                    "name": "üîß TypeScript Files",
                    "type": "filter",
                    "icon": "file-code",
                    "pattern": "**/*.ts",
                    "exclude": ["node_modules/**", "out/**"]
                },
                {
                    "name": "üìã JSON Configuration",
                    "type": "filter",
                    "icon": "json",
                    "pattern": "**/*.json",
                    "exclude": ["node_modules/**", "package-lock.json"]
                },
                {
                    "name": "üìñ Documentation",
                    "type": "group",
                    "icon": "book",
                    "children": [
                        {
                            "name": "üìù Markdown Files",
                            "type": "filter",
                            "icon": "markdown",
                            "pattern": "**/*.md"
                        },
                        {
                            "name": "üìÑ Text Files",
                            "type": "filter",
                            "icon": "file-text",
                            "pattern": "**/*.txt"
                        }
                    ]
                },
                {
                    "name": "üî® Build & Scripts",
                    "type": "group",
                    "icon": "tools",
                    "children": [
                        {
                            "name": "PowerShell Scripts",
                            "type": "filter",
                            "icon": "terminal-powershell",
                            "pattern": "**/*.ps1"
                        },
                        {
                            "name": "Build Output",
                            "type": "filter",
                            "icon": "file-binary",
                            "pattern": "**/*.vsix"
                        }
                    ]
                }
            ]
        },
        {
            "name": "üé® Advanced Examples",
            "icon": "paintbrush",
            "expanded": false,
            "children": [
                {
                    "name": "üåê Web Assets",
                    "type": "filter",
                    "icon": "globe",
                    "pattern": "**/*.{html,css,js,jsx,vue,svelte}",
                    "exclude": ["node_modules/**"]
                },
                {
                    "name": "üñºÔ∏è Images & Media",
                    "type": "filter",
                    "icon": "file-media",
                    "pattern": "**/*.{png,jpg,jpeg,gif,svg,ico,webp,mp4,mp3,wav}",
                    "exclude": ["node_modules/**"]
                },
                {
                    "name": "üß™ Test Files",
                    "type": "filter",
                    "icon": "beaker",
                    "pattern": "**/*{test,spec}*",
                    "exclude": ["node_modules/**"]
                },
                {
                    "name": "‚ö° Quick Access",
                    "type": "files",
                    "icon": "zap",
                    "files": [
                        "package.json",
                        "src/extension.ts",
                        "README.md"
                    ]
                }
            ]
        }
    ]
}